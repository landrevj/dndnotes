<%= render 'locations/list', locations: @quest.related('locations'), id: @quest.id, type: 'Quest' %>
<hr>
<%= render 'quests/list', quests: @quest.related('quests'), id: @quest.id, type: 'Quest' %>
<hr>
<%= render 'notes/list', notes: @quest.related('notes'), id: @quest.id, type: 'Quest' %>
