<%= form_with(model: @quest, local: true) do |form| %>
    <div class="row page-layout page-layout-edit">
        <% if @quest.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

                <ul>
                <% @quest.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
            </div>
        <% end %>

        <section class="left-col col-md-3 ml-auto">
            <div class="card page-main quest-main card-motif-indigo">
                <div class="card-header">Quest
                    <div class="card-actions">
                        <%= link_to 'Cancel', @quest, class: 'cancel-link' %>
                        <%= form.submit 'Save', class: ['btn', 'btn-sm', 'save-btn', 'text-light'] %>
                        <%= link_to 'Delete', @quest, method: :delete, data: { confirm: 'Are you sure?' }, class: ['btn', 'btn-red', 'btn-sm', 'delete-btn'] %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <%= form.text_field :name, class: 'form-control' %><br/>
                        <%= form.text_area :description, oninput:'this.style.height = "";this.style.height = this.scrollHeight + "px"', class: 'form-control' %>                    
                    </div>
                </div>
            </div>
            <%= render 'shared/related_left', referrer_id: @quest.id, referrer_type: 'Quest', campaigns: @campaigns, show_unlink: true %>
        </section>

        <section class="center-col col-md-6">
            <div class="card">
                <div class="card-header">Notes</div>
                <div class="card-body">
                    <div class="form-group">
                        <%= form.text_area :content, oninput:'this.style.height = "";this.style.height = this.scrollHeight + "px"', class: 'form-control' %>
                    </div>
                
                    <% unless @notes.empty? %>
                        <hr>
                        <div class="notes-container">
                        <%= render 'shared/list', card_type: 'full', objects: @notes, referrer_id: @quest.id, referrer_type: 'Quest', show_unlink: true %>      
                        </div>
                    <% end %>
                </div>
            </div>
        </section>

        <section class="right-col col-md-3 mr-auto">
            <%= render 'shared/related_right', referrer_id: @quest.id, referrer_type: 'Quest', locations: @locations, quests: @quests, show_unlink: true %>
        </section>
    </div>
<% end %>

