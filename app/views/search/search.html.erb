<section class="index col-md-8 mx-auto">
  <div class="card bg-card card-motif-gray">
    <div class="card-header">Workspace Search</div>
    <div class="card-body">
      <%= search_form_for @q, url: search_path do |form| %>
        <div class='form-group'>
          <%= form.search_field :name_or_description_or_content_cont, class: 'form-control', placeholder: 'Search' %>
        </div>
        <hr>
        <div class="row">
          <div class="col">
            <table class="table-borderless link-table note-table">
              <thead>
                <th><%= sort_link(@q, :name) %></th>
                <th><%= sort_link(@q, :created_at, 'Created') %></th>
                <th><%= sort_link(@q, :updated_at, 'Updated') %></th>
              </thead>
              <tbody>
                <% @notes.each do |note| %>
                  <tr>
                    <td class="name"><%= link_to [note.category.workspace, note.category, note] do %><%= note.name.truncate(105, separator: ' ') %><% end %></td>
                    <td class="created"><%= time_ago_in_words note.created_at %> ago</td>
                    <td class="updated"><%= time_ago_in_words note.updated_at %> ago</td>
                  </tr>
                <% end %>
              </thead>
            </table>    
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
