<div class="row page-layout">
    <section class="left-col col-md-3 ml-auto">
        <div class="card logo-card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <%= render 'shared/logo' %>
                    </div>
                    <div class="col-md-8">
                        <div class="row greeter">
                            <div class="col">
                                <div class="greeting">Welcome <%= current_user.username %>!</div>
                                <hr>
                                <div>Last login was <%= time_ago_in_words current_user.last_sign_in_at %> ago.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card stats-card">
            <div class="card-body">
                <div class="stat-pair">
                    <div class="stat-bubble bg-<%= Campaign::MOTIF_COLOR %>">Campaigns</div>
                    <div class="stat-bubble bg-<%= Campaign::MOTIF_COLOR %>"><%= current_user.campaigns.count %></div>
                </div>
                <div class="stat-pair">
                    <div class="stat-bubble bg-<%= Location::MOTIF_COLOR %>">Locations</div>
                    <div class="stat-bubble bg-<%= Location::MOTIF_COLOR %>"><%= current_user.locations.count %></div>
                </div>
                <div class="stat-pair">                    
                    <div class="stat-bubble bg-<%= Quest::MOTIF_COLOR %>">Quests</div>
                    <div class="stat-bubble bg-<%= Quest::MOTIF_COLOR %>"><%= current_user.quests.count %></div>
                </div>
                <div class="stat-pair">                    
                    <div class="stat-bubble bg-<%= Group::MOTIF_COLOR %>">Groups</div>
                    <div class="stat-bubble bg-<%= Group::MOTIF_COLOR %>"><%= current_user.groups.count %></div>
                </div>
                <div class="stat-pair">                    
                    <div class="stat-bubble bg-<%= Note::MOTIF_COLOR %>">Notes</div>
                    <div class="stat-bubble bg-<%= Note::MOTIF_COLOR %>"><%= current_user.notes.count %></div>
                </div>
                <div class="stat-pair">                    
                    <div class="stat-bubble bg-gray">Links</div>
                    <div class="stat-bubble bg-gray"><%= current_user.links.count %></div>
                </div>
            </div>
        </div>
    </section>

    <section class="center-col col-md-9">
        <div class="home-cards card-columns">
            <section>
                <%= render 'shared/related_list_card', type_class: Campaign, objects: current_user.campaigns.order(updated_at: :desc).last(5),
                                                       path: campaigns_path, new_path: new_campaign_path %>
                <%= render 'shared/related_list_card', type_class: Location, objects: current_user.locations.order(updated_at: :desc).last(5),
                                                       path: locations_path, new_path: new_location_path %>
                <%= render 'shared/related_list_card', type_class: Quest, objects: current_user.quests.order(updated_at: :desc).last(5),
                                                       path: quests_path, new_path: new_quest_path %>
                <%= render 'shared/related_list_card', type_class: Group, objects: current_user.groups.order(updated_at: :desc).last(5),
                                                       path: groups_path, new_path: new_group_path %>
                <%= render 'shared/related_list_card', type_class: Note, objects: current_user.notes.order(updated_at: :desc).last(5),
                                                       path: notes_path, new_path: new_note_path %>
            </section>
        </div>
    </section>
</div>
