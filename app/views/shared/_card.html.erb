<div class="card <%= card_type %>-card <%= object.model_name.name.downcase %>-card">
    <%= link_to object, class: 'link-target' do %>
        <div class="card-body">
            <% if object.try :name %>
                <%= object.name.truncate(100, separator: ' ') %>
            <% elsif object.try :content %>
                <% if  card_type == 'full' %>
                    <%= markdown object.content %>
                <% else %>
                    <%= object.content.truncate(100, separator: ' ') %>
                <% end %>
            <% end %>
        </div>
    <% end %>
    <% if local_assigns.has_key?(:referrer_id) && local_assigns.has_key?(:referrer_type) %>
        <%= link_to Link.find_link([referrer_id, referrer_type],[object.id, object.model_name.name]).first, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-unlink' do %>
            <i class="material-icons">link_off</i>
        <% end %>
    <% end %>
</div>
