<div class="card <%= card_type %>-card <%= object.model_name.name.downcase %>-card">
    <%= link_to object, class: 'link-target' do %>
        <div class="card-body">
            <% if object.try :name %>
                <%= object.name %>
            <% else object.try :content %>
                <%= object.content %>
            <% end %>
        </div>
    <% end %>
    <% if local_assigns.has_key?(:renderer_id) && local_assigns.has_key?(:renderer_type) %>
        <%= link_to Link.find_link([renderer_id, renderer_type],[object.id, object.model_name.name]).first, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-unlink' do %>
            <i class="material-icons">link_off</i>
        <% end %>
    <% end %>
</div>
