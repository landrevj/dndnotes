<div class="card notes-related card-motif-gray">
    <div class="card-header">
        <%= link_to 'Notes', notes_path, class: 'index-link' %>
        <div class="card-actions">
            <% if local_assigns.has_key?(:referrer_id) && local_assigns.has_key?(:referrer_type) %>
                <%= link_to new_note_path(referrer_id: referrer_id, referrer_type: referrer_type), class: 'new-link' do %>
                    <i class="material-icons">add</i>
                <% end %>
            <% else %>
                <%= link_to new_note_path, class: 'new-link' do %>
                    <i class="material-icons">add</i>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="card-body">
        <% if local_assigns.has_key?(:referrer_id) && local_assigns.has_key?(:referrer_type) %>
            <%= render 'shared/list', card_type: 'link', objects: objects, referrer_id: referrer_id, referrer_type: referrer_type, show_unlink: show_unlink %>
        <% else %>
            <%= render 'shared/list', card_type: 'link', objects: objects, show_unlink: false %>
        <% end %>
    </div>
</div>
