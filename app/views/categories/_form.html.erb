<%= form_with(model: [workspace, category], local: true) do |form| %>
  <%= render 'devise/shared/error_messages', resource: category %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: 'New category name', class: 'form-control', autocomplete: 'off' %><br/>
    <div class="input-group mb-2 mr-sm-2">
      <div class="input-group-prepend">
        <div class="input-group-text">Color</div>
      </div>
      <%= form.select :color, Category::COLORS, {}, { class: 'custom-select' } %>
    </div>
  </div>

  <%= form.hidden_field :workspace_id, value: workspace.id %>

  <%= form.submit 'Save', class: ['btn', 'btn-success', 'text-light'] %>
<% end %>
