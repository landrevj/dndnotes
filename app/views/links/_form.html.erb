<%= form_with(model: @link, local: true) do |form| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :origin_id, value: @link.origin_id %>
  <%= form.hidden_field :origin_type, value: @link.origin_type %>
  <%= form.hidden_field :linkable_id, value: @link.linkable_id %>
  <%= form.hidden_field :linkable_type, value: @link.linkable_type %>

  <div class="form-group row">
    <div class="col">
      <%= form.label :this_tag %>
      <%= form.text_field :origin_tag, placeholder: 'This tag...', class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :target_tag %>
      <%= form.text_field :linkable_tag, placeholder: 'Target tag...', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit 'Update', class: ['btn', 'btn-success', 'text-light'] %>
  </div>
<% end %>
