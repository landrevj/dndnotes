<div class="modal fade" id="linkModal" tabindex="-1" role="dialog" aria-labelledby="linkModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <%= form_with(model: link, local: true, class: 'link-search-form') do |form| %>
        <div class="modal-body">
          <%= form.hidden_field :origin_id, value: origin_id %>
          <%= form.hidden_field :origin_type, value: 'Note' %>
          <%= form.hidden_field :linkable_id %>
          <%= form.hidden_field :linkable_type, value: 'Note' %>

          <div class="input-group">
            <div class="input-group-prepend">
              <%= select_tag :categories, options_from_collection_for_select(current_user.categories, :id, :name), class: 'custom-select', id: 'linkable-search-type' %>
            </div>
              <%= form.text_field :q, placeholder: 'Search', autocomplete: 'off', class: ['form-control', 'link-search'] %>
          </div>
          <hr>
          <div class="link-search-results"></div>
          <hr>
          <div class="row">
            <div class="col">
              <%= form.text_field :origin_tag, placeholder: 'This tag...', class: 'form-control' %>
            </div>
            <div class="col">
              <%= form.text_field :linkable_tag, placeholder: 'Target tag...', class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="input-group">
            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup-sizing-sm">Target</span></div>
            <div class="link-current-target"></div>
          </div>
          <%= form.submit 'Create Link', class: ['btn', 'btn-success', 'text-light'], disabled: true %>
        </div>
      <% end %>

    </div>
  </div>
</div>

