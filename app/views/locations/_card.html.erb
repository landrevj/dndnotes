<div class="card link-card location-card">
    <%= link_to location, class: 'link-target' do %>
        <div class="card-body">
            <%= location.name %>
        </div>
    <% end %>
    <% if id && type %>
        <%= link_to Link.find_link([id, type],[location.id, 'Location']).first, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-unlink' do %>
            <i class="material-icons">link_off</i>
        <% end %>
    <% end %>
</div>
