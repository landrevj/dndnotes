<section class="index col-md-8 mx-auto">
  <div class="card border-green">
    <div class="card-header">Locations
      <div class="card-actions">
        <%= link_to new_location_path, class: 'new-link' do %>
            <i class="material-icons">add</i>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <%= search_form_for @q do |form| %>
        <div class='form-group'>
          <%= form.search_field :name_or_description_or_content_cont, class: 'form-control', placeholder: 'search' %>
        </div>
        <hr>
        <div class="row">
          <div class="col">
            <table class="table-borderless link-table location-table">
              <thead>
                <th><%= sort_link(@q, :name) %></th>
                <th><%= sort_link(@q, :created_at, 'Created') %></th>
                <th><%= sort_link(@q, :updated_at, 'Updated') %></th>
                <th></th>
              </thead>
              <tbody>
                <% @locations.each do |location| %>
                  <tr>
                    <td class="name"><%= location.name.truncate(105, separator: ' ') %></td>
                    <td class="created"><%= time_ago_in_words location.created_at %> ago</td>
                    <td class="updated"><%= time_ago_in_words location.updated_at %> ago</td>
                    <td class="link"><%= link_to location do %><i class="material-icons">insert_link</i><% end %></td>
                  </tr>
                <% end %>
              </thead>
            </table>    
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
