<% content_for :left_column do %>
    <div class="card page-main location-main border-green">
      <div class="card-header">Location
        <div class="card-actions">
          <%= link_to edit_location_path(@location) do %>
            <i class="material-icons">edit</i>
          <% end %>
          <%= link_to new_link_path(origin_id: @location.id, origin_type: 'Location') do %>
            <i class="material-icons">insert_link</i>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <h3 class="card-title text-green"><%= @location.name %></h3>
        <%= markdown @location.description %>
      </div>
    </div>
    <%= render 'shared/related_left', renderer_id: @location.id, renderer_type: 'Location', campaigns: @campaigns %>
<% end %>

<% content_for :center_column do %>
  <div class="card">
    <div class="card-header">Notes</div>
    <div class="card-body">
      <%= markdown @location.content %>
      
      <% unless @notes.empty? %>
        <hr>
        <div class="notes-container">
          <%= render 'shared/list', card_type: 'full', objects: @notes, renderer_id: @location.id, renderer_type: 'Location' %>      
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :right_column do %>
  <%= render 'shared/related_right', renderer_id: @location.id, renderer_type: 'Location', locations: @locations, quests: @quests %>
<% end %>
